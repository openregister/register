# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                                           controllers.Application.index()
GET         /ui/create                                  controllers.Application.renderNewEntryForm()
POST        /ui/create                                  controllers.Application.create()
GET         /ui/supersede/:hash                         controllers.Application.renderUpdateEntryForm(hash)
POST        /ui/supersede/:hash                         controllers.Application.update(hash)

GET         /load                                       controllers.api.ImportData.loadWithProgress()
GET         /load/progress                              controllers.api.ImportData.progress()

GET         /hash/:hash                                 controllers.api.Rest.findByHash(hash)
GET         /search                                     controllers.api.Rest.search()
GET         /:key/:value                                controllers.api.Rest.findByKey(key, value)
POST        /create                                     controllers.api.Rest.create()
POST        /supersede/:hash                            controllers.api.Rest.update(hash)

GET         /docs                                       controllers.Application.docs()
GET         /docs/api/:api                              controllers.Application.docsApi(api)


GET         /assets/javascripts/routes                  controllers.api.ImportData.javascriptRoutes()


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                  controllers.Assets.at(path="/public", file)



